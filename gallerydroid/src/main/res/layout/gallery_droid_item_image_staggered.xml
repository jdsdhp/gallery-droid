<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="@dimen/dim_card_corner_radius"
    app:cardElevation="@dimen/dim_card_elevation">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_downloader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_default_placeholder" />

    <FrameLayout
        android:id="@+id/decorator_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</com.google.android.material.card.MaterialCardView>